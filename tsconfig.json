{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": false,
    "outDir": "dist",
    "declarationDir": "dist",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "types": [
      "@types/node"
    ],
    "baseUrl": "."
  },
  "include": [
    "./index.ts"
  ],
  "exclude": [
    "node_modules",
    "./dist"
  ]
}
